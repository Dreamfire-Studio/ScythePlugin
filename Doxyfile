# =========================================
# Dreamfire â€“ Doxygen configuration
# Outputs HTML to docs/_doxygen/html
# Parses: C#, Java, JS/TS, Markdown
# =========================================

# Project
PROJECT_NAME           = Dreamfire Docs
OUTPUT_DIRECTORY       = ./docs/_doxygen
GENERATE_HTML          = YES
HTML_OUTPUT            = html
HTML_EXTRA_STYLESHEET  = docs/theme/dreamfire-doxygen.css
HTML_HEADER            = docs/theme/header.html
HTML_FOOTER            = docs/theme/footer.html
GENERATE_LATEX         = NO
GENERATE_XML           = NO
QUIET                  = YES
WARN_IF_UNDOCUMENTED   = NO

# Input
INPUT                  = .
RECURSIVE              = YES
FILE_PATTERNS          = *.cs *.java *.js *.jsx *.ts *.tsx *.md
EXCLUDE_PATTERNS       = \
                         */node_modules/* \
                         node_modules/* \
                         */dist/* */build/* */out/* \
                         */bin/* */obj/* \
                         */Library/* */Temp/* */Logs/* \
                         .git/* .github/* \
                         docs/_doxygen/*

# Paths in output
FULL_PATH_NAMES        = NO
STRIP_FROM_PATH        = .

# Parsing / language hints
MARKDOWN_SUPPORT       = YES
JAVADOC_AUTOBRIEF      = YES       # good for C#/Java summaries
OPTIMIZE_OUTPUT_JAVA   = YES       # helps C#-like syntax
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = YES
HIDE_UNDOC_MEMBERS     = NO
HIDE_UNDOC_CLASSES     = NO

# Source browser
SOURCE_BROWSER         = YES
INLINE_SOURCES         = NO
VERBATIM_HEADERS       = YES

# Diagrams (keep modest to avoid heavy CI time)
HAVE_DOT               = YES
DOT_IMAGE_FORMAT       = svg
CALL_GRAPH             = NO
CALLER_GRAPH           = NO
DOT_GRAPH_MAX_NODES    = 50

# Indexing / navigation
GENERATE_TREEVIEW      = YES
DISABLE_INDEX          = NO
ALPHABETICAL_INDEX     = YES

# Tags (optional; can help cross-projects later)
GENERATE_TAGFILE       = docs/_doxygen/tags

# Main page (optional: use README.md if present)
USE_MDFILE_AS_MAINPAGE = README.md